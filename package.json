{
  "name": "vfile-reporter-json",
  "version": "2.0.1",
  "description": "vfile utility to create a JSON report for a file",
  "license": "MIT",
  "keywords": [
    "vfile",
    "vfile-util",
    "vfile-reporter",
    "util",
    "utility",
    "reporter",
    "virtual",
    "file",
    "formatter",
    "format",
    "report",
    "json"
  ],
  "repository": "vfile/vfile-reporter-json",
  "bugs": "https://github.com/vfile/vfile-reporter-json/issues",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/unified"
  },
  "author": "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)",
  "contributors": [
    "Titus Wormer <tituswormer@gmail.com> (https://wooorm.com)"
  ],
  "files": [
    "index.js"
  ],
  "dependencies": {},
  "devDependencies": {
    "browserify": "^16.0.0",
    "nyc": "^15.0.0",
    "prettier": "^1.0.0",
    "remark-cli": "^7.0.0",
    "remark-preset-wooorm": "^6.0.0",
    "tape": "^4.0.0",
    "tinyify": "^2.0.0",
    "vfile": "^4.0.0",
    "xo": "^0.27.0"
  },
  "scripts": {
    "format": "remark . -qfo && prettier --write \"**/*.js\" && xo --fix",
    "build-bundle": "browserify . -s vfileReporterJSON > vfile-reporter-json.js",
    "build-mangle": "browserify . -s vfileReporterJSON -p tinyify > vfile-reporter-json.min.js",
    "build": "npm run build-bundle && npm run build-mangle",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run format && npm run build && npm run test-coverage"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "bracketSpacing": false,
    "semi": false,
    "trailingComma": "none"
  },
  "xo": {
    "prettier": true,
    "esnext": false,
    "ignores": [
      "vfile-reporter-json.js"
    ]
  },
  "remarkConfig": {
    "plugins": [
      "preset-wooorm"
    ]
  }
}
